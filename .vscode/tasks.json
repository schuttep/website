{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Portfolio Manager: Dev",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(> .*)?(.*npm start.*|.*npm run dev.*)",
                    "endsPattern": "^.*\\$"
                }
            }
        },
        {
            "label": "Portfolio Manager: Build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        },
        {
            "label": "Portfolio Manager: Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "server"
            ],
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Portfolio Manager: Client",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "client"
            ],
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}